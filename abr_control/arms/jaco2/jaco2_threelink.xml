<!-- Download stl files from -->
<!-- https://github.com/Kinovarobotics/kinova-ros/kinova_description/meshes -->
<!-- and place them in a meshes folder in this directory -->
<mujoco model="jaco2_threelink">
    <compiler angle="radian" meshdir="meshes" balanceinertia="true"/>

    <default>
        <light castshadow="false" diffuse="1 1 1" />
        <camera fovy="60" />

    </default>

    <asset>
        <mesh file="base.STL" />
        <mesh file="shoulder.STL"/>
        <mesh file="arm.STL"/>
        <mesh file="forearm.STL"/>
        <mesh file="wrist.STL"/>
        <mesh file="hand_3finger.STL"/>
    </asset>

    <contact>
        <exclude body1="hand" body2="EE"/>
        <exclude body1="hand" body2="link3"/>
        <exclude body1="hand" body2="link2"/>
        <exclude body1="hand" body2="link1"/>
        <exclude body1="hand" body2="base_link"/>

        <exclude body1="target" body2="EE"/>
        <exclude body1="target" body2="link3"/>
        <exclude body1="target" body2="link2"/>
        <exclude body1="target" body2="link1"/>
        <exclude body1="target" body2="base_link"/>
    </contact>

    <worldbody>
        <body name="hand" pos="0 0 0" mocap="true">
            <geom type="box" size=".02 .04 .06" rgba="0 .9 0 .5" contype="2"/>
        </body>
        <body name="target" pos="0 0 0" mocap="true">
            <geom type="sphere" size="0.05" rgba=".9 0 0 .5"/>
        </body>

        <geom name="floor" pos="0 0 0" size="0.5 0.5 0.05" type="plane" rgba="1 0.83 0.61 0.5"/>

        <light directional="true" pos="-0.5 0.5 3" dir="0 0 -1" />

        <body name="base_link" pos="0 0 0">
            <geom name="link0" type="mesh" mesh="base" pos="0 0 0"/>
            <inertial pos="0.000000 0.000000 0.125500" mass="0.467840" fullinertia="0.000951 0.000951 0.000374 0.000000 0.000000 0.000000"/>

            <body name="link1" pos="0 0 0.157">
                <joint name="joint0" axis="0 0 1" pos="0 0 0"/>
                <inertial pos="0.000000 -0.002000 -0.060500" mass="0.747700" fullinertia="0.001520 0.001520 0.000598 0.000000 0.000000 0.000000"/>
                <geom name="link1" type="mesh" mesh="shoulder" pos="0 0 0" euler="0 3.14 0"/>

                <body name="link2" pos="0 0.002 0.118378">
                    <inertial pos="0.000000 -0.206500 -0.010000" mass="0.990000" fullinertia="0.010502 0.000792 0.010502 0.000000 0.000000 0.000000"/>
                    <geom name="link2" type="mesh" mesh="arm" pos="0 0 0" euler="1.57 0 3.14"/>
                    <joint name="joint1" pos="0 0 0" axis="0 1 0" />

                    <body name="link3" pos="0.0005 0 0.410">
                        <inertial pos="0.000000 0.081000 -0.008600" mass="0.676300" fullinertia="0.001420 0.000304 0.001420 0.000000 0.000000 0.000000"/>
                        <geom name="forearm_mesh" type="mesh" mesh="forearm" pos="0 0 0" euler="1.57 3.14 0"/>
                        <joint name="joint2" pos="0 0 0" axis="0 -1 0" />

                        <body name="EE" pos="0 -0.01267177 0.205875">
                            <inertial pos="0 0 0" mass="0.01" diaginertia="0.3 0.1 0.2" />
                        </body>

                    </body>

                </body>

            </body>

        </body>

    </worldbody>

    <actuator>
        <motor name="joint0_motor" joint="joint0"/>
        <motor name="joint1_motor" joint="joint1"/>
        <motor name="joint2_motor" joint="joint2"/>
    </actuator>

</mujoco>
